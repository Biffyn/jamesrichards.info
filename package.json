{
  "name": "jamesrichards.dev",
  "version": "1.0.0",
  "description": "JamesRichards.dev Website",
  "main": "app.js",
  "scripts": {
    "dev:design": "webpack --watch",
    "dev:hugo": "cd hugo && hugo server --verbose --disableFastRender",
    "start": "concurrently \"npm run dev:hugo\" \"npm run dev:design\"",
    "build:design": "webpack",
    "build:hugo": "cd hugo && hugo",
    "build:components": "cd components && npm run lint && npm run build",
    "build:components:dev": "cd components && npm run lint && npm run build:dev",
    "build": "run-s prebuild build:components build:design build:hugo",
    "build:ci": "run-s prebuild build:components build:design",
    "deploy": "firebase deploy --debug --token \"$FIREBASE_TOKEN\" --only hosting",
    "oncommit": "run-s format:fix tslint:fix",
    "format:fix": "pretty-quick --staged",
    "tslint:fix": "cd components && npm run lint:fix",
    "clean": "rimraf public/*",
    "prebuild": "npm run clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run oncommit"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/free-brands-svg-icons": "^5.8.1",
    "@fortawesome/free-regular-svg-icons": "^5.8.1",
    "@fortawesome/free-solid-svg-icons": "^5.8.1",
    "bootstrap": "^4.3.1",
    "hotroute": "0.0.7"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "assets-webpack-plugin": "^3.9.10",
    "autoprefixer": "^9.5.1",
    "bootstrap.native": "^2.0.26",
    "bootstrap.native-loader": "^2.0.0",
    "clean-webpack-plugin": "^2.0.1",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "firebase-admin": "^7.3.0",
    "firebase-tools": "^6.8.0",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "husky": "^2.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.36",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "purgecss-from-js": "^0.1.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.4.5",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  }
}
